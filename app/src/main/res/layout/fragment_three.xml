<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:hint="@string/id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="@id/editTextId"
        app:layout_constraintStart_toStartOf="@id/editTextId"
        app:layout_constraintTop_toBottomOf="@id/editTextId" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextCname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:hint="C Name"
        app:layout_constraintEnd_toEndOf="@id/editTextname"
        app:layout_constraintStart_toStartOf="@id/editTextname"
        app:layout_constraintTop_toBottomOf="@id/editTextname" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPutData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/shape_button"
        android:hint="PutData"
        app:layout_constraintEnd_toEndOf="@id/editTextCname"
        app:layout_constraintStart_toStartOf="@id/editTextCname"
        app:layout_constraintTop_toBottomOf="@id/editTextCname" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShowData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonPutData" />

</androidx.constraintlayout.widget.ConstraintLayout>